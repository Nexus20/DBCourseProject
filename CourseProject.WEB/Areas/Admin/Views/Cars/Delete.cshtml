@model CarViewModel

@{
    ViewData["Title"] = $"Delete car {Model.FullModel}";
}

<h4 class="alert alert-warning alert-heading">Are you sure you want to delete this car brand?</h4>
<div>
    <div class="row">
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EquipmentItems)
                </dt>
                <dd class="col-sm-8">
                    @foreach (var item in Model.EquipmentItems) {
                        @item.Category.Name
                        @foreach (var value in item.EquipmentItemValues) {
                            @value.Value
                        }
                    }
                </dd>
            </dl>
        </div>
        <div class="col-sm-6 fotorama" data-nav="thumbs">
            @foreach (var image in Model.Photos) {
                <img src="@image.Path" alt="">
            }
        </div>
    </div>
    
    <form asp-action="DeleteConfirm" asp-controller="Cars" asp-area="Admin">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>