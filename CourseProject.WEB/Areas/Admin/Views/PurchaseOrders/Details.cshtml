@using CourseProject.Domain
@model PurchaseOrderViewModel

@{
    ViewBag.Title = $"Purchase request #{Model.Id}";
}

<h2>Purchase request #@Model.Id</h2>

<dl class="row">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.State)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.State)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.CreationDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.CreationDate)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.LastUpdateDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.LastUpdateDate)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.Client.UserName)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.Client.UserName)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.Client.Email)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.Client.Email)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.Manager)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.ManagerId)
    </dd>
</dl>

<div class="row">
    <div class="col-sm-12 card" style="margin: 20px;">
        <div class="row">
            <div class="col-sm-5">
                @if (Model.EquipmentItemsValues.ElementAt(0).EquipmentItem.Car.Photos.Count > 0) {
                    <img src="@Model.EquipmentItemsValues.ElementAt(0).EquipmentItem.Car.Photos.First().Path" class="card-img-top" alt="">
                }
                else {
                    <img src="/img/no-image.jpg" alt="" style="height: 300px">
                }
            </div>
            <div class="col-sm-7">
                <div class="card-body">
                    <h5 class="card-title">
                        @Model.EquipmentItemsValues.ElementAt(0).EquipmentItem.Car.FullModel
                    </h5>
                    <ul class="list-group">
                        @foreach (var equipmentItemValue in Model.EquipmentItemsValues) {
                            <li class="list-group-item">@equipmentItemValue.EquipmentItem.Category.Name: @equipmentItemValue.Value (&dollar; @equipmentItemValue.Price)</li>
                        }
                    </ul>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a asp-controller="Cars" asp-action="Details" asp-area="" class="card-link btn btn-outline-info" asp-route-id="@Model.EquipmentItemsValues.ElementAt(0).EquipmentItem.Car.Id">Details</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="col-5">
    <div class="d-flex gap-1">
        <a asp-action="Index" asp-area="Admin" asp-controller="SupplyOrders" class="btn btn-primary">Go to list</a>
        @switch (Model.State) {
            case PurchaseOrderState.New:

                <form method="post" asp-action="AcceptPurchaseOrder" asp-area="Admin" asp-controller="PurchaseOrders">
                    <input type="hidden" name="purchaseOrderId" value="@Model.Id"/>
                    <input type="submit" value="Accept this order" class="btn btn-primary"/>
                </form>

                break;
            case PurchaseOrderState.Processing:
                <a asp-action="ClosePurchaseOrder" asp-area="Admin" asp-controller="PurchaseOrders" asp-route-purchaseOrderId="@Model.Id" class="btn btn-primary">Close this order</a>
                <a asp-action="CancelPurchaseOrder" asp-area="Admin" asp-controller="PurchaseOrders" asp-route-purchaseOrderId="@Model.Id" class="btn btn-primary">Cancel this order</a>
                break;
            case PurchaseOrderState.Closed:
                break;
            case PurchaseOrderState.Canceled:
                break;
        }
        @*<a asp-action="Delete" asp-area="Admin" asp-controller="SupplyOrders" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>*@
    </div>
</div>