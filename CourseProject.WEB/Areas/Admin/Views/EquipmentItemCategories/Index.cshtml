@using CourseProject.BLL.FilterModels
@model CourseProject.WEB.Models.PaginatedFilteredViewModels.EquipmentItemCategoriesWithFiltersViewModel

@{
    ViewData["Title"] = "Equipment categories list";
}

<h1>Equipment categories</h1>
<hr>

<p>
    <a asp-action="Create" asp-area="Admin" asp-controller="EquipmentItemCategories" class="btn btn-primary btn-lg">Add a new equipment category</a>
</p>

<div class="row">
    <div class="col-12">
        <form method="get" asp-action="Index" id="category-filtering-form">
            <div class="mb-3">
                <label asp-for="Filters.Name" class="form-label"></label>
                <input asp-for="Filters.Name" name="Name" class="form-control" value="@(string.IsNullOrWhiteSpace(Model.SelectedName) ? "" : $"{Model.SelectedName}")" />
                <span asp-validation-for="Filters.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Filters.UnitsOfMeasure" class="form-label"></label>
                <input asp-for="Filters.UnitsOfMeasure" name="UnitsOfMeasure" class="form-control" value="@(string.IsNullOrWhiteSpace(Model.SelectedUnitsOfMeasure) ? "" : $"{Model.SelectedUnitsOfMeasure}")" />
                <span asp-validation-for="Filters.UnitsOfMeasure" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Filters.OrderType" class="form-label"></label>
                <select asp-for="@Model.Filters.OrderType" name="OrderType" class="form-select">
                    @Html.Raw("<option " + (Model.SelectedOrderType is EquipmentItemCategoryOrderType.None ? "selected = \"selected\" " : "")         + "value=" + (int)EquipmentItemCategoryOrderType.None + ">None</option>")
                    @Html.Raw("<option " + (Model.SelectedOrderType is EquipmentItemCategoryOrderType.AlphabetAsc ? "selected = \"selected\" " : "")  + "value=" + (int)EquipmentItemCategoryOrderType.AlphabetAsc + ">Alphabetically</option>")
                    @Html.Raw("<option " + (Model.SelectedOrderType is EquipmentItemCategoryOrderType.AlphabetDesc ? "selected = \"selected\" " : "") + "value=" + (int)EquipmentItemCategoryOrderType.AlphabetDesc + ">Reverse alphabetically</option>")
                </select>
            </div>
            <div class="mb-3 d-flex gap-2">
                <input type="submit" value="Fitler" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="EquipmentItemCategories" asp-area="Admin" class="btn btn-secondary">Reset All Filters</a>
            </div>
            <div class="mb-3">
                <div class="form-label">Items per page:</div>
                <div class="dropdown" id="items-per-page-dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="items-per-page-dropdown-btn-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @Model.PageViewModel.PageSize
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="items-per-page-dropdown-btn-toggle">
                        <li>
                            <button type="submit" class="dropdown-item" name="TakeCount" value="10">10</button>
                            <button type="submit" class="dropdown-item" name="TakeCount" value="20">20</button>
                            <button type="submit" class="dropdown-item" name="TakeCount" value="50">50</button>
                            <button type="submit" class="dropdown-item" name="TakeCount" value="100">100</button>
                        </li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12 pagination">
        <div class="d-flex gap-1">
            @for (var i = 1; i <= Model.PageViewModel.TotalPages; i++) {
                @Html.Raw($"<button form=\"category-filtering-form\" type=\"submit\" name=\"PageNumber\" {(i == Model.PageViewModel.PageNumber ? "disabled" : "")} value=\"{i}\" class=\"btn btn-primary\">{i}</button>")
            }
        </div>
    </div>
</div>

@if(Model.EquipmentItemCategories.Any()) {
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EquipmentItemCategories[0].Id)</th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentItemCategories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentItemCategories[0].UnitsOfMeasure)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.EquipmentItemCategories) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsOfMeasure)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="@($"dropdownMenuButton{item.Id}")" data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="@($"dropdownMenuButton{item.Id}")">
                            <li><a asp-action="Edit" asp-area="Admin" asp-controller="EquipmentItemCategories" asp-route-id="@item.Id" class="dropdown-item">Edit</a></li>
                            @if (!item.EquipmentItems.Any()) {
                                <li class="dropdown-divider"></li>
                                <li><a asp-action="Delete" asp-area="Admin" asp-controller="EquipmentItemCategories" asp-route-id="@item.Id" class="dropdown-item">Delete</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else {
    <h3>No categories found (</h3>
}

<div class="row">
    <div class="col-12 pagination">
        <div class="d-flex gap-1">
            @for (var i = 1; i <= Model.PageViewModel.TotalPages; i++) {
                @Html.Raw($"<button form=\"category-filtering-form\" type=\"submit\" name=\"PageNumber\" {(i == Model.PageViewModel.PageNumber ? "disabled" : "")} value=\"{i}\" class=\"btn btn-primary\">{i}</button>")
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}