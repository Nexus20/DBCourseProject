@model CreateEditEquipmentItemCategoryViewModel

@{
    ViewData["title"] = "Add new equipment category";
}

<h1>Add equipment category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="EquipmentItemCategories" asp-area="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UnitsOfMeasure" class="form-label"></label>
                <input asp-for="UnitsOfMeasure" class="form-control" />
                <span asp-validation-for="UnitsOfMeasure" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create equipment category" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="EquipmentItemCategories" asp-area="Admin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}