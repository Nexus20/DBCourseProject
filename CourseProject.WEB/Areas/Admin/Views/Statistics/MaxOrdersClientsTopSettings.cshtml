@{
    ViewBag.Title = "Get top clients who made more orders";
}

<h2>Get top clients who made more orders</h2>

<div class="row">
    <div class="col-12">
        <form asp-action="GetTopClientsWhoMadeMoreOrders" method="post">
            <div class="mb-3">
                <input type="number" value="3" name="top" class="form-control" min="1"/>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-success" value="Get statistics"/>
            </div>
        </form>
    </div>
</div>
