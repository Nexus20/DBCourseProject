@using CourseProject.Domain
@model CourseProject.WEB.Models.StatisticsViewModels.TopManagersWhoHandleMoreOrdersSettingsViewModel

@{
    ViewBag.Title = "Top managers who handled more orders";
}

<h2>Configure settings</h2>

<div class="row">
    <div class="col-12">
        <form method="post">
            
            <div class="mb-3">
                <label asp-for="Top" class="form-label"></label>
                <input asp-for="Top" class="form-control" min="3"/>
                <span asp-validation-for="Top" class="text-danger"></span>    
            </div>

            <div class="mb-3">
                <label asp-for="DateRangeSettings" class="form-label"></label>
                <select asp-for="DateRangeSettings" class="form-select">
                    <option value="@DateRangeSettings.AllTheTime">All the time</option>
                    <option value="@DateRangeSettings.Month">Month</option>
                    <option value="@DateRangeSettings.Quarter">Quarter</option>
                    <option value="@DateRangeSettings.Year">Year</option>
                </select>
                <span asp-validation-for="Top" class="text-danger"></span>    
            </div>

            <div class="mb-3">
                <input type="submit" value="Get statistics" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
