@using CourseProject.Domain
@{
    ViewBag.Title = "Get profit statistics";
}

<h2>Get profit statistics</h2>

<div class="row">
    <div class="col-12">
        <form method="post" asp-action="GetProfit">

            <div class="mb-3">
                <label for="select-date-range" class="form-label">Set time range</label>
                <select id="select-date-range" class="form-select" name="settings" required>
                    <option value="@DateRangeSettings.AllTheTime">All the time</option>
                    <option value="@DateRangeSettings.Month">Month</option>
                    <option value="@DateRangeSettings.Quarter">Quarter</option>
                    <option value="@DateRangeSettings.Year">Year</option>
                </select>
            </div>

            <div class="mb-3">
                <input type="submit" value="Get statistics" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>