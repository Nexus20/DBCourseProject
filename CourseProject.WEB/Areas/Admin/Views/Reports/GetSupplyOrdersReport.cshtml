@using CourseProject.Domain
@{
    ViewBag.Title = "Configure settings";
}

<h2>Configure settings</h2>

<div class="row">
    <div class="col-12">
        <form method="post" asp-action="GetSupplyOrdersReport">
            
            <div class="mb-3">
                @await Component.InvokeAsync("ShowroomsFilterComponent")
            </div>
            
            <div class="mb-3">
                @await Component.InvokeAsync("SuppliersFiltersComponent")
            </div>

            <div class="mb-3">
                <label for="select-time-range" class="form-label">Select time range:</label>
                <select id="select-time-range" class="form-select" name="dateSettings">
                    <option value="@DateRangeSettings.AllTheTime">All the time</option>
                    <option value="@DateRangeSettings.Month">Month</option>
                    <option value="@DateRangeSettings.Quarter">Quarter</option>
                    <option value="@DateRangeSettings.Year">Year</option>
                </select>
            </div>

            <div class="mb-3">
                <input type="submit" value="Get report" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>