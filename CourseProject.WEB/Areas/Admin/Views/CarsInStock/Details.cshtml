@model CarInStockViewModel

@{
    ViewData["Title"] = "Car details";
}

<h1>@Model.Car.FullModel</h1>
<h3>&dollar; @Model.FullPrice</h3>
<hr />


<div class="row">
    <div class="col-sm-6">
        <div class="mb-3">
            @Html.DisplayNameFor(model => model.EquipmentItemValues)
        </div>
        <ul class="list-group mb-3">
            @foreach (var item in Model.EquipmentItemValues) {
                <li class="list-group-item">@item.EquipmentItem.Category.Name: @item.Value @(item.EquipmentItem.Category.UnitsOfMeasure == "none" ? "" : item.EquipmentItem.Category.UnitsOfMeasure) &dollar; @item.Price</li>
            }
        </ul>
    </div>
    <div class="col-sm-6 fotorama" data-nav="thumbs">
        @foreach (var image in Model.Car.Photos) {
            <img src="@image.Path" alt="">
        }
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-primary">Back to list</a>
</div>
