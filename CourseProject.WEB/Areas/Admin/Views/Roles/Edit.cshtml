@model ChangeRoleViewModel

@{
    ViewData["Title"] = "Change access rights";
}

<h2>Change role for user @Model.UserName</h2>

<form asp-action="Edit" asp-area="Admin" asp-controller="Roles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles) {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>