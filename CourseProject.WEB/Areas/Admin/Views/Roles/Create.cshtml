@model string

@{
    ViewData["Title"] = "New role";
}

<h1>Create new role</h1>
<hr />

<div class="row">
    <div class="col-sm-6">
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="Create" asp-area="Admin" asp-controller="Roles" method="post">

            <div class="mb-3">
                <label for="name">New role</label>
                <input name="name" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-success" value="Add new role" /> 
            </div>
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-primary">Back to roles list</a>
            </div>
        </form>

    </div>
</div>

