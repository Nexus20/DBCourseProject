@model CreatePurchaseOrderViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<form asp-action="CreatePurchaseOrder" method="post">

    @foreach (var item in Model.Items) {
        <input type="hidden" asp-for="ClientId"/>
        <div class="mb-3">
            <label for="select-@item.EquipmentItemCategoryName.Replace(" ", "-")" class="form-label">Select @item.EquipmentItemCategoryName</label>
            <select id="select-@item.EquipmentItemCategoryName.Replace(" ", "-")" asp-items="item.SelectList" name="Equipment" class="form-control"></select>
        </div>
    }

    <div class="mb-3">
        <input type="submit" class="btn btn-success" value="Create purchase order" />
    </div>
</form>
